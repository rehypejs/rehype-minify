{
  "name": "rehype-remove-comments",
  "version": "6.1.1",
  "description": "rehype plugin to remove comments (except conditional comments)",
  "license": "MIT",
  "keywords": [
    "comment",
    "html",
    "mangle",
    "minify",
    "plugin",
    "rehype",
    "rehype-plugin",
    "unified"
  ],
  "repository": "https://github.com/rehypejs/rehype-minify/tree/main/packages/rehype-remove-comments",
  "bugs": "https://github.com/rehypejs/rehype-minify/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com>"
  ],
  "sideEffects": false,
  "type": "module",
  "exports": "./index.js",
  "files": [
    "index.d.ts",
    "index.d.ts.map",
    "index.js",
    "lib/"
  ],
  "dependencies": {
    "@types/hast": "^3.0.0",
    "hast-util-is-conditional-comment": "^3.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "scripts": {},
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "ignoreCatch": true,
    "strict": true
  },
  "xo": {
    "prettier": true,
    "rules": {
      "capitalized-comments": "off"
    }
  }
}
