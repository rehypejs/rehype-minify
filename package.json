{
  "private": true,
  "name": "monorepo",
  "license": "MIT",
  "repository": "https://github.com/wooorm/rehype-minify",
  "bugs": "https://github.com/wooorm/rehype-minify/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "devDependencies": {
    "bail": "^1.0.1",
    "chalk": "^1.1.3",
    "dox": "^0.9.0",
    "execa": "^0.6.0",
    "hastscript": "^3.0.0",
    "is-hidden": "^1.0.1",
    "lerna": "2.0.0-beta.28",
    "mdast-zone": "^3.0.0",
    "negate": "^1.0.0",
    "nyc": "^10.0.0",
    "parse-author": "^2.0.0",
    "rehype": "^4.0.0",
    "rehype-cli": "^2.0.0",
    "remark": "^7.0.0",
    "remark-cli": "^3.0.0",
    "remark-preset-wooorm": "^2.0.0",
    "strip-indent": "^2.0.0",
    "tape": "^4.6.0",
    "to-vfile": "^2.0.0",
    "trim": "0.0.1",
    "trim-trailing-lines": "^1.0.0",
    "trough": "^1.0.0",
    "uniq": "^1.0.1",
    "unist-builder": "^1.0.2",
    "vfile-find-down": "^2.0.1",
    "xo": "^0.18.0",
    "xtend": "^4.0.1"
  },
  "scripts": {
    "prepublish": "lerna bootstrap",
    "build-packages": "node script/build-packages",
    "build-md": "remark . -qfo",
    "build": "npm run build-packages && npm run build-md",
    "lint": "xo",
    "test-api": "tape test/index.js packages/*/test.js",
    "test-coverage": "nyc --reporter lcov tape test/index.js packages/*/test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "xo": {
    "space": true,
    "esnext": false,
    "rules": {
      "promise/no-callback-in-promise": "off",
      "guard-for-in": "off",
      "no-eq-null": "off",
      "eqeqeq": [
        2,
        "allow-null"
      ],
      "camelcase": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
